import java.util.ArrayList;

public class CircusManager {
    private ArrayList<Circus> shows = new ArrayList<>();

    public void addShow(Circus show) {
        shows.add(show);
    }

    public void printShows() {
        for (Circus show : shows) {
            System.out.println("=== Представление ===");
            System.out.println(show);
            System.out.println();
        }
    }
}


